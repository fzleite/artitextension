 {
  "name": "Art IT Apontamento de Horas",
  "short_name": "Art IT",
  "description": "Monitor de apontamento de horas no Rosie (https://rosie.artit.com.br).",
  "version": "1.3",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Art IT Intelligent Technology",
    "default_icon": {
      "72" : "images/icons/icon-72x72.png",
      "96" : "images/icons/icon-96x96.png",
      "128" : "images/icons/icon-128x128.png",
      "192" : "images/icons/icon-192x192.png"
    }

   },
  "icons": {
    "72" : "images/icons/icon-72x72.png",
    "96" : "images/icons/icon-96x96.png",
    "128" : "images/icons/icon-128x128.png",
    "192" : "images/icons/icon-192x192.png"
  },
  "permissions": [
    "activeTab",
    "storage", 
    "background",
    "history",
    "notifications",
    "webNavigation"
  ],
  "background": {
    "page" : "background.html"
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'; connect-src 'self' wss://*.firebaseio.com;"
}